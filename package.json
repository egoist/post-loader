{
  "name": "post-loader",
  "version": "1.1.1",
  "description": "Webpack loader for blog posts written in Markdown.",
  "repository": {
    "url": "egoist/post-loader",
    "type": "git"
  },
  "main": "dist/post-loader.common.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest && npm run lint && npm run build",
    "test:cov": "jest --coverage && npm run lint",
    "lint": "xo",
    "build": "bili --buble.target.node 4"
  },
  "author": "egoist <0x142857@gmail.com>",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "es2015",
          "stage-3"
        ]
      }
    }
  },
  "devDependencies": {
    "babel-preset-env": "^1.1.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-3": "^6.22.0",
    "bili": "^0.14.0",
    "deep-assign": "^2.0.0",
    "jest-cli": "^18.1.0",
    "markdown-it-task-lists": "^1.4.1",
    "memory-fs": "^0.4.1",
    "require-from-string": "^1.2.1",
    "webpack": "^2.2.1",
    "xo": "^0.17.1"
  },
  "xo": {
    "space": 2,
    "semicolon": false,
    "esnext": true,
    "envs": [
      "jest"
    ],
    "rules": {
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "no-unused-expressions": [
        "error",
        {
          "allowShortCircuit": true
        }
      ]
    }
  },
  "dependencies": {
    "front-matter": "^2.1.2",
    "loader-utils": "^1.0.2",
    "markdown-it": "^8.3.0"
  }
}
